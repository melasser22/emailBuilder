{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": [],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "declarationMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
   // Only compile your source files
   "include": ["src/**/*"],
   // Never touch your build output
   "exclude": ["node_modules", "dist"]
}
